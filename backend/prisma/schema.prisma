generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Toda vez que for criar alguma tabela nova, ou alterar algo
// rode : npx prisma migrate dev --name nome_da_migracao
// rode: npx prisma generate

model Usuario {
  id    Int    @id @default(autoincrement())
  nome  String @db.VarChar(100)
  email String @unique @db.VarChar(100)
  senha String @db.VarChar(8)
}
